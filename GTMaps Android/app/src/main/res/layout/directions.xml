<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:theme="?attr/actionBarTheme"
            android:minHeight="60dp"
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:elevation="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/room_text"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_below="@+id/building_text"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Take a left at the end of the hall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginTop="61dp"
            android:layout_below="@+id/ivfloorplan"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/building_text"
            android:layout_gravity="center_horizontal"
            android:textSize="30dp"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/ivfloorplan"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/building_text"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/nav_vert"
            android:id="@+id/imageButton3"
            android:onClick="showPopup"
            android:elevation="0dp"
            android:visibility="visible"
            android:backgroundTint="#00000000"
            android:cropToPadding="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</RelativeLayout>